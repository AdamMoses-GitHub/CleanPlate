# CleanPlate Configuration
# Copy this file to .env and fill in your values.

# ============================================
# APPLICATION
# ============================================

# Environment: development, staging, production
APP_ENV=production

# Enable debug mode — NEVER enable in production
APP_DEBUG=false

# Application timezone
APP_TIMEZONE=UTC

# ============================================
# PATHS  (leave blank to use defaults)
# ============================================

# Override the directory used for temporary files
TEMP_DIR=

# Override the directory used for log files
LOG_DIR=

# ============================================
# SCRAPER
# ============================================

SCRAPER_TIMEOUT=10
SCRAPER_MIN_DELAY=2
SCRAPER_MAX_REDIRECTS=5
SCRAPER_SSL_VERIFY=true

# ============================================
# SECURITY
# ============================================

# In production set this to your specific domain(s)
ALLOWED_ORIGINS=*

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60

MAX_URL_LENGTH=2048
MAX_REQUEST_SIZE=10485760
CSP_POLICY=default-src 'self'

# ============================================
# DATABASE
# ============================================

# Use 127.0.0.1 not "localhost" on Linux — "localhost" uses a Unix socket
# Docker local dev: use service name "db"  |  VPS: use 127.0.0.1
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_db_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password_here
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# Docker local dev only — leave blank on VPS/shared hosting
DB_ROOT_PASSWORD=your_root_password_here

# ============================================
# ADMIN DASHBOARD
# ============================================

# MUST be changed before deploying
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_strong_admin_password_here

CACHE_TTL_HOURS=24

# Recipes shown per homepage carousel visit
FEATURED_LIST_SIZE=5

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info

# ============================================
# DOCKER  (local dev port mappings)
# ============================================

APP_PORT=8000
DB_PORT_EXTERNAL=3306
PHPMYADMIN_PORT=8081

# ============================================
# DEVELOPMENT
# ============================================

# Log detailed confidence scoring to the PHP error log
CONFIDENCE_DEBUG=false
